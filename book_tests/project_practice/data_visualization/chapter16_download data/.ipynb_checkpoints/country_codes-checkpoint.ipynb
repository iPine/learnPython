    "from pygal.i18n import COUNTRIES\n",
    "\n",
    "def get_country_code(country_name):\n",
    "    \"\"\"根据指定的国家，返回Pygal使用的两个字母的国别码\"\"\"\n",
    "    \n",
    "    for code, name in COUNTRIES.items():\n",
    "        if name == country_name:\n",
    "            return code\n",
    "    #如果没有找到指定的国家，就返回None\n",
    "    return None"
   ]
  }
